 * Contact â€” Left: simple B&W form; right: empty. Form only for now.
 */
---

<section class="contact-section" id="contact" aria-label="Contact">
  <div class="contact-page">
    <div class="contact-layout">
      <div class="contact-left" aria-label="Contact form">
        <form class="contact-form" action="#" method="post" aria-label="Contact form">
          <label class="contact-label" for="contact-name">Name</label>
          <input class="contact-input" id="contact-name" type="text" name="name" placeholder="Your name" autocomplete="name" />

          <label class="contact-label" for="contact-email">Email</label>
          <input class="contact-input" id="contact-email" type="email" name="email" placeholder="your@email.com" autocomplete="email" />

          <label class="contact-label" for="contact-message">Message</label>
          <textarea class="contact-input contact-textarea" id="contact-message" name="message" placeholder="Your message" rows="4"></textarea>

          <button class="contact-submit" type="submit">Send</button>
        </form>
      </div>
      <div class="contact-right" aria-label="Reserved">
        <!-- Empty for now -->
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: var(--color-bg);
    color: var(--color-ink);
    padding-top: clamp(2.5rem, 6vw, 4rem);
    padding-bottom: 5rem;
    font-family: "Courier Prime", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    letter-spacing: 0.2px;
  }

  .contact-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 18px 18px 42px;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
    align-items: start;
  }

  .contact-left {
    max-width: 420px;
  }

  .contact-right {
    min-height: 200px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-ink);
  }

  .contact-input {
    width: 100%;
    padding: 0.625rem 0.75rem;
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--color-ink);
    background: var(--color-paper);
    border: 1px solid var(--color-ink);
    border-radius: 4px;
  }

  .contact-input::placeholder {
    color: var(--color-muted);
  }

  .contact-input:focus {
    outline: 2px solid var(--color-ink);
    outline-offset: 2px;
  }

  .contact-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .contact-submit {
    align-self: flex-start;
    padding: 0.5rem 1.25rem;
    font-family: inherit;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-paper);
    background: var(--color-ink);
    border: 1px solid var(--color-ink);
    border-radius: 4px;
    cursor: pointer;
  }

  .contact-submit:hover,
  .contact-submit:focus-visible {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .contact-layout {
      grid-template-columns: 1fr;
    }
    .contact-left {
      max-width: 100%;
    }
  }
</style>
